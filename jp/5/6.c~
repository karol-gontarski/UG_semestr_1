#include <stdio.h>

int main()
{
  int i;
  float max, min, tablica[6];

    printf("podaj 6 liczb rzeczywistych: ");
    for (i = 0; i < 6; i++) {
	scanf("%f", &tablica[i]);
    }

    i = 0;
    max=min=tablica[0];
    while (i < 6) {
      if(tablica[i]>max)
	max=tablica[i];
      if(tablica[i]<min)
	min=tablica[i];
	i++;
    }

    printf("min: %.2f\nmax: %.2f\n ", min,max );

    return 0;
}
